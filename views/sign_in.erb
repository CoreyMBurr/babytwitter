<div class="form-container">
	<form class="form-signin" role="form" action="sessions/new" method="POST"> 
		<h2 class="form-signin-heading">Please sign in</h2>
		
			<div class="input-button-wrapper">
				<label for="username"></label> 
				<input placeholder="Email address" type="text" name="username" required autofocus><br>
				<label for="password"></label> 
				<input placeholder="Password" type="password" name="password" required autofocus><br><br>

				<input class="form-submit-button" type="submit" value="LOG IN">
			</div>
	</form>

	<div class="signup">
		<a class="signup-link" href="/signup">signup</a>
	</div>
</div>

